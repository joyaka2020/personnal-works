{% extends 'base.html.twig' %}

{% block body %}

<h1>MovieDB</h1>

<div class="row">
    <div class="col">
        <h2>Les derniers films</h2>
    </div>
</div>

<div class="row">
    <div class="col">
        <ul class="list-unstyled">
        {% for movie in lastTenMovies %}
            <li><a href="{{ path('movie_show', {id: movie.id}) }}">{{ movie.title }}</a></li>
        {% endfor %}
        </ul>
    </div>
</div>

{# Liste des films avec une pagination #}
<div class="row">
    <div class="col">
        <h3>Tous les films</h3>
        <ul class="list-unstyled">
        {% for movie in allMovies %}
            <li><a href="{{ path('movie_show', {id: movie.id}) }}">{{ movie.title }}</a></li>
        {% endfor %}
        </ul>
        {% for pageNumber in 1..totalPages %}
            <a href="{{ path('movie_list', {page: pageNumber}) }}">{{ pageNumber }}</a> - 
        {% endfor %}
    </div>
</div>

{% endblock %}
